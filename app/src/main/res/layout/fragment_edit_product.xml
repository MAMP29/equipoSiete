<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        tools:context=".view.fragment.EditProductFragment">

        <include layout="@layout/include_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_12"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="12dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Form"
            android:hint="Nombre artículo">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.App.TextInputEditText.Form"
                android:id="@+id/etProductNameEditProduct"
                android:inputType="text"
                android:maxLength="40" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Form"
            android:hint="Precio Artículo">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.App.TextInputEditText.Form"
                android:id="@+id/etProductPriceEditProduct"
                android:inputType="number"
                android:maxLength="20" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Form"
            android:hint="Cantidad">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.App.TextInputEditText.Form"
                android:id="@+id/etProductQuantityEditProduct"
                android:inputType="number"
                android:maxLength="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEditProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar"
            android:textSize="16sp"
            android:backgroundTint="#E6502D"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/btnFragmentRecycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</layout>